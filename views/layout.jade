html(xmlns="http://www.w3.org/1999/xhtml", lang="en")
    head
        meta(http-equiv='X-UA-Compatible', content='IE=9; IE=8; IE=7; IE=EDGE')
        meta(charset='utf-8')
        title= title
        link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Ubuntu' )
        script(type='text/javascript', src='/scripts/jquery-1.9.0.min.js')
        script(type='text/javascript', src='/scripts/jquery.infinitescroll.min.js')
        script(type='text/javascript', src='/scripts/jquery-ui-1.9.0.min.js')
        script(type='text/javascript', src='/scripts/modules/route.js', defer)
        block head
    body
        div.page
            header
                nav
                    ul#menu
                        div#title
                            h1
                                a(href='/', style='text-decoration:none;display:block;') #{title}
                        li
                            a(href="/upload2/") Add
                        li
                            a(href="/login") Login
            section#main
                block content
