doctype 5
html(xmlns="http://www.w3.org/1999/xhtml", lang="en")
    head
        meta(http-equiv='X-UA-Compatible', content='IE=9; IE=8; IE=7; IE=EDGE')
        meta(charset='utf-8')
        title= title
        link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Ubuntu' )
        link(rel='stylesheet', type='text/css', href='/stylesheets/siteV1.css')
        script(type='text/javascript', src='/scripts/jquery-1.9.0.min.js')
        script(type='text/javascript', src='/scripts/curl.js')
        script(type='text/javascript')
            var isMobile = #{isMobile};
            $(function(){
                curl({
                    baseUrl:'scripts'
                });
    
                curl(['modules/mobileViewPort']).then(function (viewPort) {
                    viewPort.isMobile = isMobile;
                    viewPort.set();
                });
    
            });
